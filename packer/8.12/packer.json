{
    "builders": [
        {
            "type": "docker",
            "image": "ubuntu:20.04",
            "commit": true,
            "changes": [
                "ENV LANG en_US.UTF-8",
                "ENV LC_ALL en_US.UTF-8",
                "ENV SHELL /bin/bash",
                "ENV TZ UTC",
                "ENV JIRA_OWNER jira",
                "ENV JIRA_GROUP jira",
                "ENV JIRA_HOME /var/atlassian/application-data/jira",
                "ENV JIRA_CATALINA /opt/atlassian/jira",
                "ENV JVM_MINIMUM_MEMORY 2048m",
                "ENV JVM_MAXIMUM_MEMORY 2048m",
                "ENV CATALINA_CONNECTOR_PROXYNAME \"\"",
                "ENV CATALINA_CONNECTOR_PROXYPORT \"\"",
                "ENV CATALINA_CONNECTOR_SCHEME http",
                "ENV CATALINA_CONNECTOR_SECURE false",
                "ENV CATALINA_CONTEXT_PATH \"/\"",
                "ENV JVM_SUPPORT_RECOMMENDED_ARGS -Datlassian.plugins.enable.wait=300 -XX:+UnlockExperimentalVMOptions -XX:+UseContainerSupport -XX:+UseZGC",
                "ENV SESSION_TIMEOUT 300",
                "ENV PATH $PATH:$JIRA_CATALINA/bin",
                "VOLUME $JIRA_HOME",
                "WORKDIR $JIRA_HOME",
                "EXPOSE 8005",
                "EXPOSE 8080",
                "ENTRYPOINT [\"catatonit\", \"-g\", \"--\", \"docker-entrypoint.sh\"]",
                "CMD [\"start-jira.sh\", \"-fg\"]"
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "set -ex",
                "apt-get update",
                "apt-get install -y ca-certificates curl gcc iproute2 python3 python3-dev sudo"
            ]
        },
        {
            "type": "ansible",
            "playbook_file": "./packer.yml",
            "inventory_directory": "./",
            "galaxy_file": "./ansible-galaxy-requirements.yml"
        }
    ]
}
